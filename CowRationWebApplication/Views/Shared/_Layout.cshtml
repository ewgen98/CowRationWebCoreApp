                            <i class="fa fa-pie-chart mr-3"></i>Экономика
                        </a>
                        break;
                    case "Логистика":
                        <a asp-controller="Ration" asp-action="KormSelect" class="list-group-item waves-effect">
                            <i class="fa fa-calculator mr-3"></i>Рацион
                        </a>
                        <a asp-controller="Logic" asp-action="KormLagerraum" class="list-group-item active waves-effect">
                            <i class="fa fa-pencil-square mr-3"></i>Логистика
                        </a>
                        <a asp-controller="Economy" asp-action="Initialdata" class="list-group-item waves-effect">
                            <i class="fa fa-pie-chart mr-3"></i>Экономика
                        </a>
                        break;
                    case "Экономика":
                        <a asp-controller="Ration" asp-action="KormSelect" class="list-group-item waves-effect">
                            <i class="fa fa-calculator mr-3"></i>Рацион
                        </a>
                        <a asp-controller="Logic" asp-action="KormLagerraum" class="list-group-item waves-effect">
                            <i class="fa fa-pencil-square mr-3"></i>Логистика
                        </a>
                        <a asp-controller="Economy" asp-action="Initialdata" class="list-group-item active waves-effect">
                            <i class="fa fa-pie-chart mr-3"></i>Экономика
