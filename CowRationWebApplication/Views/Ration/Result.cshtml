@model IEnumerable<RationGrid>

<div class="d-flex mt-3 mb-3 justify-content-center blue-text">
    <h4 class="font-weight-bold"></h4>
</div>

<div class="card-body d-sm-flex">
    <div id="table" style="width:100%;" class="table-editable">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        Корм
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-sm">
                        Количество (кг/сутки)
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-sm">
                        Стоимость (руб)
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var korm in Model)
                {
                    <tr>
                        <td>@korm.Name</td>
                        <td>@korm.Value</td>
                        <td>@korm.Cost</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center cost-ration">
    <span class="blue-text">Стоимость рациона:</span>
    <span class="mr-2 ml-2">@Model.Sum(k=>k.Cost)</span>
    <span class="blue-text">(руб)</span>
</div>

<div class="row justify-content-around mb-5 mt-5">
    <button type="submit" class="btn btn-primary w-25">Далее</button>
</div>


