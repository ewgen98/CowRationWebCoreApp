@model IEnumerable<KormGrid>
@{
    ViewData["Title"] = "Рацион";
}
<form method="post" asp-controller="Ration" asp-action="KormCategory">
    <div class="d-flex mt-3 justify-content-center blue-text">
        <h4 class="font-weight-bold">Выбор кормов</h4>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <span class="blue-text indsript">Название организаци:</span>
        <div class="md-form">
            <input type="text" id="name" class="form-control">
            <label for="name">Введите название</label>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <span class="blue-text indsript">Количество голов в организации:</span>
        <div class="md-form">
            <input type="number" id="count" class="form-control">
            <label for="count">Введите количество</label>
        </div>
    </div>

    <div class="card-body d-sm-flex">
        <div id="table" style="width:100%;" class="table-editable">
            <span class="table-add float-right mt-0 mb-3 mr-2">
                <a href="#!" class="text-success">
                    <i class="fa fa-plus fa-2x"
                       aria-hidden="true"></i>
                </a>
            </span>
            <table class="table table-bordered table-responsive-md table-striped text-center">
                <tr>
                    <th class="text-center">Выбор</th>
                    <th class="text-center">Название корма</th>
                    <th class="text-center">Цена (руб/кг)</th>
                    <th class="text-center">Сортировка</th>
                    <th class="text-center">Действия</th>
                </tr>
                <tbody>
                    @foreach (var korm in Model)
                    {
                        <tr>
                            <td class="pt-3-half">

                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="selectedKorms" value="@korm.Id">
                                    <span></span>
                                </div>
                            </td>
                            <td class="pt-3-half" contenteditable="true">@korm.KormName</td>
                            <td class="pt-3-half" contenteditable="true">@korm.Price</td>
                            <td class="pt-3-half">
                                <span class="table-up"><a href="#!" class="indigo-text"><i class="fa fa-long-arrow-up" aria-hidden="true"></i></a></span>
                                <span class="table-down">
                                    <a href="#!" class="indigo-text">
                                        <i class="fa fa-long-arrow-down"
                                           aria-hidden="true"></i>
                                    </a>
                                </span>
                            </td>
                            <td>
                                <span class="table-remove"><button type="button" class="btn red btn-rounded btn-sm my-0">Удалить</button></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-around mb-5 mt-5">
        <button type="submit" class="btn btn-primary w-25">Далее</button>
    </div>
</form>