@model IEnumerable<KormGrid>
<div class="row">
    <div class="col s12 center-align">
        <span class="flow-text">Название организации:</span>
        <div class="input-field inline">
            <input id="name" type="text" class="validate">
            <label for="name">Название</label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 center-align">
        <span class="flow-text">Количество голов в хозяйстве:</span>
        <div class="input-field inline">
            <input id="count" type="number" class="validate">
            <label for="count">Кол-во</label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 right">
        <table class="centered">
            <thead>
                <tr>
                    <th class="center-align flow-text">Выбор</th>
                    <th class="center-align flow-text">Выбор кормов</th>
                    <th class="center-align flow-text">Цена(руб/кг)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var korm in Model)
                {
                    <tr>
                        <td class="center-align">
                           @Html.CheckBox("Selected",korm.Selected);
                        </td>
                        <td class="center-align">@korm.KormName</td>
                        <td class="center-align">@korm.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <a class="waves-effect waves-light btn left col s2 offset-s3"><i class="fas fa-arrow-circle-left left"></i>Назад</a>
    <a class="waves-effect waves-light btn left col s2 offset-s2"><i class="fas fa-arrow-circle-right right"></i>Далее</a>
</div>