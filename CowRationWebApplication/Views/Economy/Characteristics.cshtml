@model DataMilk
@{
    ViewData["Title"] = "Экономика";
}

<div class="d-flex mt-3 justify-content-center blue-text">
    <h4 class="font-weight-bold">Характеристики молока</h4>
</div>

<div class="d-flex mt-3 mb-2 justify-content-center blue-text">
    <h5>Структура сортности молока</h5>
</div>
<form asp-controller="Economy" asp-action="Expenses" method="post">
    <div class="row">
        <div class="col-4 d-flex flex-column align-items-center">
            <span class="font-weight-bold">Эстра</span>
            <div id="slider-extra" class="ml-2" style="width:10px; height:200px;">
                <div id="custom-handle" class="ui-slider-handle" style="border-radius:50%;background: #007bff;"></div>
            </div>
            <span name="countMilk" id="value-extra" class="font-weight-bold mt-2 ml-3"></span>
            <input type="hidden" id="extra" asp-for="ExtraPercent"/>

            <div class="d-flex">
                <div class="md-form">
                    <input type="text" asp-for="ExtraPrice" id="extra-price" class="form-control">
                    <label for="extra-price">Введите сумму</label>
                </div>
                <span class="blue-text align-self-center">(руб)</span>
            </div>
        </div>

        <div class="col-4 d-flex flex-column align-items-center">
            <span class="font-weight-bold">Первый</span>
            <div id="slider-first" class="ml-2" style="width:10px; height:200px;">
                <div class="ui-slider-handle" style="border-radius:50%;background: #007bff;"></div>
            </div>
            <span name="countMilk" id="value-first" class="font-weight-bold mt-2 ml-3"></span>
            <input type="hidden" id="first" asp-for="FirstPercent"/>

            <div class="d-flex">
                <div class="md-form">
                    <input type="text" asp-for="FirstPrice" id="first-price" class="form-control">
                    <label for="first-price">Введите сумму</label>
                </div>
                <span class="blue-text align-self-center">(руб)</span>
            </div>
        </div>

        <div class="col-4 d-flex flex-column align-items-center">
            <span class="font-weight-bold">Второй</span>
            <div id="slider-two" class="ml-2" style="width:10px; height:200px;">
                <div class="ui-slider-handle" style="border-radius:50%;background: #007bff;"></div>
            </div>
            <span name="countMilk" id="value-two" class="font-weight-bold mt-2 ml-3"></span>
            <input type="hidden" id="two" asp-for="HigherPercent"/>

            <div class="d-flex">
                <div class="md-form">
                    <input type="text" asp-for="HigherPrice" id="two-price" class="form-control">
                    <label for="two-price">Введите сумму</label>
                </div>
                <span class="blue-text align-self-center">(руб)</span>
            </div>
        </div>
    </div>

    <div class="form-row d-flex align-items-center">
        <div class="col-6 d-flex justify-content-end mr-5">
            <span class="blue-text">Цена за 1 кг молока базисной жирности:</span>
        </div>
        <div class="col">
            <div class="md-form">
                <input type="text" asp-for="FatMilk" id="materialRegisterFormLastName" class="form-control">
                <label for="materialRegisterFormLastName">Введите жирность</label>
            </div>
        </div>
        <div class="col-3">
            <span class="blue-text">(%)</span>
        </div>
    </div>

    <div class="row justify-content-around mb-5 mt-5">
        <a href="#" class="btn btn-primary blue"><i class="fa fa-arrow-left mr-3"></i>Назад</a>
        <button type="submit" class="btn btn-primary blue">Далее<i class="fa fa-arrow-right ml-3"></i></button>
    </div>
</form>
    @section Script{
        <script>
            $(function () {
                $("#slider-extra").slider({
                    orientation: "vertical",
                    min: 0,
                    max: 100,
                    step: 2,
                    value: 0,
                    slide: function (event, ui) {
                        $("#value-extra").text(ui.value + "%");
                        $("#extra").val(ui.value);
                    }
                });
                $("#value-extra").text($("#slider-extra").slider("value") + "%");
                $("#extra").val($("#slider-extra").slider("value"));
            });

            $(function () {
                $("#slider-first").slider({
                    orientation: "vertical",
                    min: 0,
                    max: 100,
                    step: 2,
                    value: 0,
                    slide: function (event, ui) {
                        $("#value-first").text(ui.value + "%");
                        $("#first").val(ui.value);

                    }
                });
                $("#value-first").text($("#slider-first").slider("value") + "%");
                $("#first").val($("#slider-extra").slider("value"));

            });

            $(function () {
                $("#slider-two").slider({
                    orientation: "vertical",
                    min: 0,
                    max: 100,
                    step: 2,
                    value: 0,
                    slide: function (event, ui) {
                        $("#value-two").text(ui.value + "%");
                        $("#two").val(ui.value);

                    }
                });
                $("#value-two").text($("#slider-two").slider("value") + "%");
                $("#two").val($("#slider-extra").slider("value"));
            });

        </script>
    }
