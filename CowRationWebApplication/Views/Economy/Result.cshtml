@model DataIncome
@{
    ViewData["Title"] = "Экономика";
}
<div class="d-flex mt-3 justify-content-center blue-text">
    <h4 class="font-weight-bold">Планируемые показатели</h4>
</div>

<div class="d-flex mt-3 mb-2 justify-content-center blue-text">
    <h5>Структура затрат</h5>
</div>

<div class="card-body d-sm-flex">
    <div id="table" style="width:100%;" class="table-editable">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        Статья затрат
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-sm">
                        Сумма (руб)
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-sm">
                        %
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exp in Model.Expenses)
                {
                    <tr>
                        <td>@exp.Article</td>
                        <td>@exp.Price</td>
                        <td>@exp.Percenent</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="form-row d-flex align-items-center">
    <!----------Суточные затраты------------------->
    <div class="col-3 d-flex justify-content-end">
        <span class="blue-text">Суточные затраты:</span>
    </div>
    <div class="col-2">
        <span class="font-weight-bold">@Model.ExpensesDay</span>
        <span class="blue-text">(тыс./руб)</span>
    </div>
    <!------------------------------------------->
    <!----------Суточный объем молока------------------->
    <div class="col-3 d-flex justify-content-end">
        <span class="blue-text">Суточный объем молока:</span>
    </div>
    <div class="col-2">
        <span class="font-weight-bold">@Model.ExpensesMilk</span>
        <span class="blue-text">(кг)</span>
    </div>
    <!------------------------------------------->
</div>
<div class="form-row mt-4 d-flex align-items-center">
    <!-----------------Выручка------------------->
    <div class="col-3 d-flex justify-content-end">
        <span class="blue-text">Выручка:</span>
    </div>
    <div class="col-2">
        <span class="font-weight-bold">@Model.Receipts</span>
        <span class="blue-text">(тыс./руб)</span>
    </div>
    <!------------------------------------------->
    <!----------Прибыль до уплаты налогов--------->
    <div class="col-3 d-flex justify-content-end">
        <span class="blue-text">Прибыль до уплаты налогов:</span>
    </div>
    <div class="col-2">
        <span class="font-weight-bold">@Model.Income</span>
        <span class="blue-text">(тыс./руб)</span>
    </div>
    <!------------------------------------------->
</div>
<div class="form-row mt-4 mb-5 d-flex align-items-center">
    <!-----------------Рентабельность в сутки------------------->
    <div class="col-6 d-flex justify-content-end">
        <span class="blue-text">Рентабельность в сутки:</span>
    </div>
    <div class="col-2">
        <span class="font-weight-bold">@Model.Profitability</span>
        <span class="blue-text">(%)</span>
    </div>
    <!------------------------------------------->
</div>

