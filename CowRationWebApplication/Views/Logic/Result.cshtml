@model LogicViewModel
@{
    ViewData["Title"] = "Resutl";
}
<div class="d-flex mt-3 justify-content-center blue-text">
    <h4 class="font-weight-bold">Остатки</h4>
</div>

<div class="d-flex justify-content-center mt-2 align-items-center cost-ration">
    <span class="blue-text">При данном рационе кормов хватит на</span>
    <span class="mr-2 ml-2">6</span>
    <span class="blue-text">дней</span>
</div>

<div class="d-flex justify-content-center align-items-center mt-4 subtitle">
    <span class="blue-text">Остатки кормов в данном составе корма</span>
</div>

<div class="card-body d-sm-flex">
    <div id="table" style="width:100%;" class="table-editable">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">
                        Вид корма
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                    <th class="th-sm">
                        Количество дней
                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var korm in Model.LogicGrid)
                {
                    var colorStyle= "positiv";
                    if (korm.Day<0)
                    {
                        colorStyle= "negativ";
                    }
                    else if (korm.Day == 0)
                    {
                        colorStyle= "egal";
                    }
                    <tr>
                        <td class="@colorStyle">@korm.Name</td>
                        <td class="@colorStyle">@korm.Day</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
